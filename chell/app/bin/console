#!/usr/bin/env node

const repl = require('repl');
const mongoose = require('mongoose');
const debug = require('debug')('chell:console');
const _ = require('lodash');

const config = require('../config');
const models = require('../models');
const FileStorage = require('../lib/file_storage');

const fileStorage = new FileStorage(config.fileStorage);

const replServer = repl.start({
  prompt: 'chell> ',
});

models.init(config.mongoURI)
  .then(() => {
    replServer.context.Course = mongoose.model('Course');
  })
  .catch((err) => {
    debug(err);
    process.exit(1);
  });

replServer.context.debug = debug;
replServer.context.config = config;
replServer.context._ = _;
replServer.context.fileStorage = fileStorage;
